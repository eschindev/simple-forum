{{#each posts as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <hz></hz>
      <p>Created on {{format_date post.created_on}}</p>
    </div>
  </div>
{{/each}}

<a href="/post">Create a new Post!</a>