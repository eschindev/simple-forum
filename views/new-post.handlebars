<div class="col-md-6">
  <h2>Edit Post</h2>

  <form class="form new-post-form" data-user-id="{{user_id}}">
    <div class="form-group">
      <input
        type="text"
        name="post-title"
        id="post-title"
        placeholder="Creative post title here"
      />
      <textarea
        name="post-body"
        id="post-body"
        rows="4"
        cols="50"
        placeholder="Write a post!"
      ></textarea>
    </div>
    <div class="form-group">
      <button
        class="btn btn-primary"
        type="submit"
        data-user-id="{{user_id}}"
      >Submit</button>
    </div>
  </form>
</div>

<script src="new-post.js"></script>